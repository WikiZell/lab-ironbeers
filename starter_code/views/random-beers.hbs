<div class="beer-container">

    {{#each beer}}
    <div class="beer-container">
        <div class="beer-thumb"><img src="{{this.image_url}}" /></div>
        <div class="beer-content">
            <h1 class="beer-name">{{this.name}}</h1>
            <h3>{{this.tagline}}</h3>
            <p>{{this.description}}</p>

            <h1>Food Paring</h1>
            <ul>
                {{#each this.food_pairing}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            <p>
                <span class="b-tips">Brewer Tips: </span>{{this.brewers_tips}}
            </p>

        </div>
    </div>
    {{/each}}

</div>